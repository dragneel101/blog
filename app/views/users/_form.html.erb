<div class="container mt-3 mb-4", id="newform">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user%>
      <%= form_with(model: @user,class: "shadow p-5 bg-secondary rounded", local: true)  do |f| %>
        <div class="mb-3 form-group row">
          <%= f.label :username, class:"form-label text-light fs-5 fw-bold "%>
          <%=f.text_field :username, class: "form-control shadow rounded", placeholder:"Username" %>
        </div>
        <div class="mb-3 form-group row">
          <%= f.label :email, class:"form-label text-light fs-5 fw-bold" %>
          <%=f.email_field :email, class:"form-control shadow rounded" , placeholder:"Enter Valid Email"%>
        </div>
        <div class="mb-3 form-group row">
          <%= f.label :password, class:"form-label text-light fs-5 fw-bold" %>
          <%=f.password_field :password, class:"form-control shadow rounded" , placeholder:"Enter Valid password"%>
        </div>
        <div class="row align-items-center text-center">
          <div class="col">
            <%= f.submit(@user.new_record? ? "Sign up" : "update", class: "btn btn-success") %>
          </div>
          <div class="col">
            <%= link_to 'Cancel', articles_path, class:"btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<h1 class="text-center mt-4">Create a new Category</h1>
<div class="container mt-3 mb-4", id="newform">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category%>
      <%= form_with(model: @category,class: "shadow p-5 bg-secondary rounded", local: true)  do |f| %>
        <div class="mb-3 form-group row">
          <%= f.label :name, class:"form-label text-light fs-5 fw-bold "%>
          <%=f.text_field :name, class: "form-control shadow rounded", placeholder:"name" %>
        </div>
        <div class="row align-items-center text-center">
          <div class="col">
            <%= f.submit class: "btn btn-success" %>
          </div>
          <div class="col">
            <%= link_to 'Cancel', articles_path, class:"btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


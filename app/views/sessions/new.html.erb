<h1 class="text-center mt-4">Sign up for Tech Blog</h1>
<div class="container mt-3 mb-4", id="newform">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path ,class: "shadow p-5 bg-secondary rounded", local: true)  do |f| %>
        <div class="mb-3 form-group row">
          <%= f.label :email, class:"form-label text-light fs-5 fw-bold" %>
          <%=f.email_field :email, class:"form-control shadow rounded" , placeholder:"Enter Valid Email"%>
        </div>
        <div class="mb-3 form-group row">
          <%= f.label :password, class:"form-label text-light fs-5 fw-bold" %>
          <%=f.password_field :password, class:"form-control shadow rounded" , placeholder:"Enter Your password"%>
        </div>
        <div class="row align-items-center text-center">
          <div class="col">
            <%= f.submit "Log in", class: "btn btn-success" %>
          </div>
          <div class="col">
            <%= link_to 'Cancel', articles_path, class:"btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
